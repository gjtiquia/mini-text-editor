{
    "name": "@mini-text-editor/file-server",
    "version": "0.1.0",
    "author": "gjtiquia",
    "license": "MIT",
    "bin": "dist/bin.js",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "scripts": {
        "start": "node dist/index.js",
        "build": "tsup src/bin.ts src/index.ts --format cjs,esm --dts --clean",
        "dev": "npm run build -- --watch --onSuccess \"npm run start\"",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.16",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    }
}
